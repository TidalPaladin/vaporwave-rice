# Alias to be sourced by .zshrc
#

# Neovim instead of vim
alias vim="nvim"

# Dirs
alias db='cd ~/Documents/CS6360'
alias ml='cd ~/Documents/CS6375'
alias arch='cd ~/Documents/CS3340'

alias -g G='| grep'
alias -g L='| less'
alias -g M='| more'
alias aliases='vim ~/.aliase'
alias zshrc='vim ~/.zshrc'
alias amend="git commit --amend"
alias c='cd'
alias u='cd ../'


alias utd-vpn='sudo openconnect vpn.utdallas.edu'
alias pia="bash $HOME/.pia.sh"
alias now="date +%Y-%m-%d.%H:%M:%S"
alias SS="sudo systemctl"
alias susp='systemctl suspend'
alias gac="git add . && git commit -m"
alias gpom="git push origin master"
alias rewal="wal -g -i \"$HOME/Pictures/Wallpapers/vaporwave.jpg\" --saturate 0.75"
alias ls='ls -hN --color=auto --group-directories-first'
alias ccat="highlight --out-format=ansi"
alias raidstart="mdadm --assemble --scan && mount -a"
alias mars-mips="java -jar $HOME/.scripts/Mars4_5.jar"


# Git aliases
alias gad='git add --all .'
alias gag='git add . && git commit --amend --no-edit && git push -f'
alias gbc='gdc'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gcl='git clone'
alias gcm="git commit -m"
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git diff master'
alias gg='git lg'
alias gom-done="git-on-master && gpf && git-done"
alias gp='git push'
alias gpf='git push --force'
alias gph='git push heroku'
alias gpr='git pull --rebase'
alias gpush='echo "Use gp!" && git push'
alias grc='git rebase --continue'
alias gs='git show'
alias m='git checkout master'
alias mastre='master'
alias squash='git rebase -i master'

alias sbox='ssh tidal@hades.feralhosting.com'
alias serv='ssh tidal@tidalpaladin.com'
alias reattach='tmux attach'
alias inst='sudo pacman -S'
alias aur='pacaur -S'
alias update='pacaur -Syu'
